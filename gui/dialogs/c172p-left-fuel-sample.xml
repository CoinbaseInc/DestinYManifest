<?xml version="1.0"?>

<PropertyList>

    <name>c172p-left-fuel-sample-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Right Fuel Tank Sampling</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <padding>6</padding>
        <group>
            <layout>hbox</layout>
            <text>
                <label>Fuel Sample Colour:</label>
                <halign>left</halign>
            </text>
        </group>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <visible>
                    <equals>
                        <property>/consumables/fuel/tank[1]/water-contamination</property>
                        <value>0.0</value>
                    </equals>
                </visible>
                <color>
                    <red>0.22</red>
                    <green>0.69</green>
                    <blue>0.87</blue>
                </color>
                <label>light blue</label>
            </text>
            <text>
                <row>0</row>
                <col>0</col>
                <visible>
                    <and>
                        <greater-than>
                            <property>/consumables/fuel/tank[1]/water-contamination</property>
                            <value>0.0</value>
                        </greater-than>
                        <less-than-equals>
                            <property>/consumables/fuel/tank[1]/water-contamination</property>
                            <value>0.2</value>
                        </less-than-equals>
                    </and>
                </visible>
                <color>
                    <red>0.22</red>
                    <green>0.69</green>
                    <blue>0.87</blue>
                </color>
                <label>part light blue</label>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <visible>
                    <and>
                        <greater-than>
                            <property>/consumables/fuel/tank[1]/water-contamination</property>
                            <value>0.0</value>
                        </greater-than>
                        <less-than-equals>
                            <property>/consumables/fuel/tank[1]/water-contamination</property>
                            <value>0.2</value>
                        </less-than-equals>
                    </and>
                </visible>
                <color>
                    <red>0.84</red>
                    <green>0.84</green>
                    <blue>0.84</blue>
                </color>
                <label>part translucid</label>
            </text>
            <text>
                <row>0</row>
                <col>0</col>
                <visible>
                    <greater-than>
                        <property>/consumables/fuel/tank[1]/water-contamination</property>
                        <value>0.2</value>
                    </greater-than>
                </visible>
                <color>
                    <red>0.84</red>
                    <green>0.84</green>
                    <blue>0.84</blue>
                </color>
                <label>translucid</label>
            </text>
        </group>
    </group>

    <hrule/>

    <group>
        <layout>vbox</layout>
        <default-padding>6</default-padding>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend>Discard sample and take another one</legend>
            <equal>true</equal>
            <default>false</default>
            <binding>
                <command>nasal</command>
                <script>c172p.discard_fuel_sample(1);</script>
            </binding>
        </button>
        <button>
            <legend>Return sample to the tank and close</legend>
            <equal>true</equal>
            <default>false</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
        
    <hrule/>

    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend>Close</legend>
            <equal>true</equal>
            <key>Esc</key>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

</PropertyList>
