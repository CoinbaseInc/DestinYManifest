<system name="c172p-glass-effects">

    <channel name="rainsplasheffect">

        <fcs_function name="splashxOut">
            <function>
                <max>
                   <property>/environment/aircraft-effects/splashxa</property>
                   <property>/environment/aircraft-effects/splashxr</property>
                </max>
            </function>
            <output>/environment/aircraft-effects/splash-vector-x</output>
        </fcs_function>

        <fcs_function name="splashzOut">
            <function>
                <max>
                   <property>/environment/aircraft-effects/splashza</property>
                   <property>/environment/aircraft-effects/splashzr</property>
                </max>
            </function>
            <output>/environment/aircraft-effects/splash-vector-z</output>
        </fcs_function>

    </channel>

</system>
