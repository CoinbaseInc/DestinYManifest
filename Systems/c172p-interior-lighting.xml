<system name="c172p ground effects">

    <channel name="contact-points">

        <fcs_function name="rgb-r-factor">
            <output>lighting/rgb-ra-r-factor</output>
            <function>
                <product>
                    <property>/controls/lighting/instruments-norm</property>
                    <property>/sim/model/c172p/lighting/ra-r</property>
                    <property>/sim/model/material/instruments/factor</property>  
                </product>
            </function>
        </fcs_function>
        
        <fcs_function name="rgb-g-factor">
            <output>lighting/rgb-ra-g-factor</output>
            <function>
                <product>
                    <property>/controls/lighting/instruments-norm</property>
                    <property>/sim/model/c172p/lighting/ra-g</property>
                    <property>/sim/model/material/instruments/factor</property>                    
                </product>
            </function>
        </fcs_function>
        
        <fcs_function name="rgb-b-factor">
            <output>lighting/rgb-ra-b-factor</output>
            <function>
                <product>
                    <property>/controls/lighting/instruments-norm</property>
                    <property>/sim/model/c172p/lighting/ra-b</property>
                    <property>/sim/model/material/instruments/factor</property>
                </product>
            </function>
        </fcs_function>

    </channel>

</system>
