<?xml version="1.0"?>

<!--
***********************************************************************************
Carburator icing and carb heat toggle
***********************************************************************************
 -->

<system name="carburetor">

    <channel name="icing">
    
        <fcs_function name="Carb heat on cuases RPM drop on engine 0">
            <function>
                <ifthen>
                    <property>/controls/anti-ice/engine[0]/carb-heat</property>
                    <value>0.35</value>
                    <value>0.15185</value>
                </ifthen>
            </function>
            <output>/fdm/jsbsim/propulsion/engine[0]/air-intake-impedance-factor</output>
            <output>/fdm/jsbsim/propulsion/engine[1]/air-intake-impedance-factor</output>
        </fcs_function>
        
        <fcs_function name="Carb heat on cuases RPM drop on engine 1">
            <function>
                <ifthen>
                    <property>/controls/anti-ice/engine[1]/carb-heat</property>
                    <value>0.35</value>
                    <value>0.15185</value>
                </ifthen>
            </function>

        </fcs_function>
        
    </channel>
    
</system>
