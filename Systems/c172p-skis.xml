<system name="c172p-skis">

    <channel name="ski-rotations">

        <switch name="moseskirotation">
            <output>ski/rotateNG</output>
            <default value="0"/>

            <!-- ski is off ground and not fuly rotated -->
            <test logic="AND" value="-1">
                /fdm/jsbsim/gear/unit[23]/WOW EQ 0
                /fdm/jsbsim/gear/unit[23]/z-position GT -33 
            </test>

            <!-- ski is on ground and not fuly rotated -->
            <test logic="AND" value="1">
                /fdm/jsbsim/gear/unit[23]/WOW EQ 1
                /fdm/jsbsim/gear/unit[23]/z-position LT -23
            </test>
        </switch>

        <switch name="leftskirotation">
            <output>ski/rotateLG</output>
            <default value="0"/>

            <!-- ski is off ground and not fuly rotated -->
            <test logic="AND" value="-1">
                /fdm/jsbsim/gear/unit[24]/WOW EQ 0
                /fdm/jsbsim/gear/unit[24]/z-position GT -33 
            </test>

            <!-- ski is on ground and not fuly rotated -->
            <test logic="AND" value="1">
                /fdm/jsbsim/gear/unit[24]/WOW EQ 1
                /fdm/jsbsim/gear/unit[24]/z-position LT -23
            </test>
        </switch>

        <switch name="rightskirotation">
            <output>ski/rotateRG</output>
            <default value="0"/>

            <!-- ski is off ground and not fuly rotated -->
            <test logic="AND" value="-1">
                /fdm/jsbsim/gear/unit[25]/WOW EQ 0
                /fdm/jsbsim/gear/unit[25]/z-position GT -33 
            </test>

            <!-- ski is on ground and not fuly rotated -->
            <test logic="AND" value="1">
                /fdm/jsbsim/gear/unit[25]/WOW EQ 1
                /fdm/jsbsim/gear/unit[25]/z-position LT -23
            </test>
        </switch>

    </channel>
 
</system>
